{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./scripts/index.ts"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES2020",
    "target": "ES2020",
    "strict": true  ,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom",
      "dom.iterable",
    ]
  },
}
